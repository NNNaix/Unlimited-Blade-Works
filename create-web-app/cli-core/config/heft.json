{
  "$schema": "https://developer.microsoft.com/json-schemas/heft/heft.schema.json",
  "eventActions": [
    {
      "actionKind": "deleteGlobs",
      "heftEvent": "clean",
      "actionId": "preClean",
      "globsToDelete": [
        "lib"
      ]
    },
    {
      "actionKind": "copyFiles",
      "heftEvent": "post-build",
      "actionId": "post-copyFiles",
      "copyOperations": [
        {
          "sourceFolder": "lib/src",
          "destinationFolders": [
            "lib"
          ]
        }
      ]
    },
    {
      "actionKind": "deleteGlobs",
      "heftEvent": "post-build",
      "actionId": "postClean",
      "globsToDelete": [
        "temp",
        "lib/src",
        "_tmp_*"
      ]
    }
  ],
  "heftPlugins": []
}